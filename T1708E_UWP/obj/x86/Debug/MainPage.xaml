<Page
    x:Class="T1708E_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T1708E_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <StackPanel x:ConnectionId='2' x:Name="ParentStackPanel" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="820">
            <TextBox x:ConnectionId='3' x:Name="Email" Margin="0, 30, 0, 0" Header="Email" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="293"/>
            <PasswordBox x:ConnectionId='4' x:Name="Password" Margin="0, 30, 0, 0" Header="Password" Width="293" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='5' x:Name="FirstName" Margin="0, 30, 0, 0" Header="First Name" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="293"/>
            <TextBox x:ConnectionId='6' x:Name="LastName" Margin="0, 30, 0, 0" Header="Last Name" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="293"/>
            <TextBox x:ConnectionId='7' x:Name="ImageUrl" Margin="0, 30, 0, 0" Header="Avatar Url" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="293"/>

            <Image x:ConnectionId='8' x:Name="MyAvatar" Width="150" Height="150" HorizontalAlignment="Center" Visibility="Collapsed"/>

            <Button x:ConnectionId='9' Content="Capture Your Photo" HorizontalAlignment="Center" Margin="0, 30, 0, 0"                       />
            <TextBox x:ConnectionId='10' x:Name="Phone" Margin="0, 30, 0, 0" Header="Phone Number" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="293"/>
            <TextBox x:ConnectionId='11' AcceptsReturn="True" x:Name="Address" Margin="0, 30, 0, 0" Header="Address" HorizontalAlignment="Center" VerticalAlignment="Top" Width="293" Height="100"/>
            <TextBox x:ConnectionId='12' AcceptsReturn="True" x:Name="Introduction" Margin="0, 30, 0, 0" Header="Introduction" HorizontalAlignment="Center" VerticalAlignment="Top" Width="293" Height="100"/>
            <TextBlock Text="Gender" Margin="0, 30, 240, 0" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="70, 30, 0, 0">
                <RadioButton x:ConnectionId='16' Content="Male" Tag="1"                        />
                <RadioButton x:ConnectionId='17' Content="Female" Tag="0"                        />
                <RadioButton x:ConnectionId='18' Content="Other" Tag="2"                         IsChecked="True"/>
            </StackPanel>
            <CalendarDatePicker x:ConnectionId='13' x:Name="BirthDay" Header="Birthday" Margin="0, 30, 0, 0"                               HorizontalAlignment="Center" Width="293"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='14' x:Name="BtnSignup" Margin="0, 30, 0, 0" Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Top"                       Width="100"/>
                <Button x:ConnectionId='15' x:Name="BtnReset" Margin="50, 30, 0, 0" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Top"                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</Page>

